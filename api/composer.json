{
    "name": "johi/slim4-api-demo",
    "description": "A small demo of putting together a slim4 api",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "http://github.com/johi/slim4-api-demo",
    "license": "MIT",
    "authors": [
        {
            "name": "Johan Lerche Schulz",
            "email": "johan.schulz@gmail.com",
            "homepage": "https://www.linkedin.com/in/johanlerche/",
            "role": "Chief Consultant Architect"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "firebase/php-jwt": "^6.0",
        "justinrainbow/json-schema": "^5.2",
        "monolog/monolog": "^1.24",
        "php-di/php-di": "^6.0",
        "robmorgan/phinx": "^0.11.1",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1",
        "swiftmailer/swiftmailer": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
